<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head', {title:"Lista de productos", css:"productListStyles"}) %>
<body>
    <%- include ('../partials/header') %>
    <main>
        <section>
            <div class="header-product-list">
                <div class="div-header-product-list">
                    <h1 class="div-header-h1-filter">Todos los productos
                    </h1>
                </div>
                <div class="order-header-product-list">
                    <select name="category" id="category" class="form-input">
                        <option value="">Ordenar por</option>
                        <option value="in-sale">En oferta</option>
                        <option value="visited">Ãšltimos agregados</option>
                    </select>
                </div>
            </div>
            <div class="section-product">
                <div class="products">
                    <% productsSent.forEach(producto => { %> 
                    <article class="article-products">
                        <a style="text-decoration: none;color: #000000;" href="/productDetail/<%= producto.id %>">
                            <img src="<%= producto.productImage %>" alt="<%= producto.productDescription %>" class="product_img">
                            <div class="main-article">
                                <p class="price"><%= producto.productPrice %></p>
                                <p class="discount"><%= producto.productDiscount %></p>
                                <h4 class="description"><%= producto.productName %></h4>
                            </div>
                        </a>
                    </article>
                    <% }) %>                     
                </div>                
            </div>
        </section>
    </main>
    <%- include ('../partials/footer') %>
</body>
</html>