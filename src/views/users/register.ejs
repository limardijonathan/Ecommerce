<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head', {title:"Registro de usuarios", css:"registerstyles"}) %>   
<body>
    <%- include ('../partials/header') %> 
    <main>
        <div id="main-box" >    
            <form action="/register" method="POST"  enctype="multipart/form-data"> 
                <div>
                    <h2>
                        ¡Crea tu cuenta!
                    </h2>
                </div>
                <div class="info">
                    <label for="user-name">Nombre de usuari@:</label><br/>
                    <input type="text" name="userName"  id="name" value="<%= locals.oldData ? oldData.userName : null %>">
                    <% if (locals.errors  && errors.userName){ %>
                        <div class= text-danger >
                            <%= errors.userName.msg %>
                        </div>
                    <% } %>   
                </div>
                <div class="info">
                    <label for="e-mail">Email:</label><br/>
                    <input type="email" name="email"  id="e-mail" value= "<%= locals.oldData ? oldData.email : null %>">
                    <% if (locals.errors  && errors.email){ %>
                        <div class= text-danger >
                            <%= errors.email.msg %>
                        </div>
                    <% } %> 
                </div>
                <div class="info">
                    <label for="password">Contraseña:</label><br/>
                    <input name="password" type="password" placeholder="Ingresar Contraseña" id="password"  >
                    <% if (locals.errors  && errors.password){ %>
                        <div class= text-danger >
                            <%= errors.password.msg %>
                        </div>
                    <% } %> 
                </div>
                <div class="info">
                    <label for="img">Imagen de perfil:</label><br/>
                    <input name="image" type="file" id="img" accept=".jpg,.png" value= "<%= locals.oldData ? oldData.image : null %>"> 
                    <% if (locals.errors  && errors.image){ %>
                        <div class= text-danger >
                            <%= errors.image.msg %>
                        </div>
                    <% } %> 
                </div>
                <div class="info">
                    <label for="birthDate">Fecha de Nacimiento:</label><br/>
                    <input type="date" name="birthDate" id="birthDate" placeholder="Fecha de nacimiento"  max="2003-09-25">
                   
                </div>
                <div id="button">
                    <button type="submit">Crear Cuenta</button>
                </div>
            </form>

        </div>
    </main>
    <%- include ('../partials/footer') %>
</body>
</html>